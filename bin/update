#!/usr/bin/env bash -e

log() { echo -e "\033[0;35m${1}\033[0m"; }

# Ask for the administrator password upfront.
sudo -v

log 'Update macOS'
sudo softwareupdate --install --all

log 'Update Mac App Store'
mas upgrade

log 'Update Homebrew'
brew update
brew upgrade
rm -rfv $(brew --cache)/*
brew tap --repair
brew cleanup

log 'Update Composer'
composer self-update
composer global update --no-dev --prefer-dist

log 'Update npm'
npm install --global npm@latest
npm update --global

# Revoke sudo access again.
sudo -k